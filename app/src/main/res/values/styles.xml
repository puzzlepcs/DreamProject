<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorHighlight</item>
        <!--No Title Bar-->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textViewStyle">@style/CustomTextView</item>
        <item name="android:editTextStyle">@style/CustomEditTextView</item>
        <item name="android:buttonStyle">@style/CustomButton</item>
    </style>

    <style name="CustomDateView" parent="@android:style/Widget.TextView" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">@dimen/single_item_height</item>
        <item name="android:textSize">@dimen/date_text_size</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:paddingRight">3dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:textColor">@color/colorDate</item>
    </style>

    <style name="divider" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="CustomTextView" parent="@android:style/Widget.DeviceDefault.TextView">
        <item name="android:fontFamily">@font/nanum1</item>
    </style>

    <style name="CustomTextView2" parent="@android:style/Widget.DeviceDefault.TextView">
        <item name="android:fontFamily">@font/nanum2</item>
    </style>

    <style name="CustomTextView3" parent="@android:style/Widget.DeviceDefault.TextView">
        <item name="android:fontFamily">@font/nanum3</item>
    </style>

    <style name="CustomEditTextView" parent="@android:style/Widget.EditText">
        <item name="android:fontFamily">@font/nanum1</item>
    </style>

    <style name="CustomButton" parent="@android:style/Widget.Button">
        <item name="android:fontFamily">@font/nanum1</item>
    </style>


</resources>
