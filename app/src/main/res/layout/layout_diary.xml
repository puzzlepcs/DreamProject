<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:layout_margin="@dimen/cardview_margin"
    android:id="@+id/diary_bg"
    app:cardBackgroundColor="@color/colorTransparency"
    app:cardCornerRadius="5dp"
    app:cardElevation="10dp"
    app:contentPadding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                style="@style/CustomDateView"
                android:id="@+id/date_viewer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Date" />

            <Button
                android:id="@+id/save_btn"
                android:background="@drawable/ic_round_add_24px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/body_viewer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Body will be shown here" />

    </LinearLayout>

</android.support.v7.widget.CardView>